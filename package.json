{
	"name": "wedding-svelte",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev --port 3333",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"watch:sass": "sass  --no-source-map --watch src/sass:public/css",
		"build:sass": "sass  --no-source-map src/sass:public/css",
		"tokens": "npx a11y-color-tokens --outputDirPath='src/sass' --colorTokensPath='src/sass/colors.cjs' --compatibilityDocsPath='src'",
		"start": "npm-run-all tokens build:sass --parallel watch:*"
	},
	"devDependencies": {
		"@sveltejs/adapter-netlify": "^1.0.0-next.44",
		"@sveltejs/adapter-node": "^1.0.0-next.0",
		"@sveltejs/kit": "^1.0.0-next.288",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"a11y-color-tokens": "^0.5.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"sass": "^1.43.4",
		"svelte": "^3.42.6",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.9.4",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3"
	},
	"type": "module"
}
